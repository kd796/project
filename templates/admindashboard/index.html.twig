{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container border mt-5 shadow-lg p-3 mb-5 bg-white rounded">
        <h1>Super Admindashboard</h1>

        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>

                <th>Address</th>
                <th>Gender</th>
                <th>Dob</th>
                <th>Mobile</th>
                <th>Role</th>

            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>

                    <td>{{ user.address }}</td>
                    <td>{{ user.gender }}</td>
                    <td>{{ user.dob ? user.dob|date('Y-m-d') : '' }}</td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.role }}</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

                  <a class="btn btn-primary float-right" href="{{ path('admin_new') }}">Create new</a>




    {% if app.user %}
        <div class="mb-3">
             <a class="btn btn-primary float-left" href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    </div>
{% endblock %}
