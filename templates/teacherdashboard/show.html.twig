{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container border shadow-lg p-3 mb-5 bg-white rounded">

    <h1 class="display-4">All The Registered Student</h1>

    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            {# <th>Password</th> #}
            <th>Address</th>
            <th>Gender</th>
            <th>Dob</th>
            <th>Mobile</th>
            <th>Role</th>
            {# <th>actions</th> #}
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if user.role == 'student' %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.password }}</td> #}
                    <td>{{ user.address }}</td>
                    <td>{{ user.gender }}</td>
                    <td>{{ user.dob ? user.dob|date('Y-m-d') : '' }}</td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.role }}</td>
                    {# <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>

                    </td> #}
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary float-right" href="{{ path('teacher_dashboard') }}">Dashboard</a>
<br><br>
    </div>
{% endblock %}