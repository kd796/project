{% extends 'base.html.twig' %}

{% block title %}Hello StudentDashboardController!{% endblock %}

{% block body %}
    <div class="border mt-5 shadow-lg p-3 mb-5 bg-white rounded">
    <h1 class="display-4">Student Dashboard</h1>
    <table class="table table-striped table-dark">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ app.user.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ app.user.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ app.user.email }}</td>
        </tr>

        <tr>
            <th>Address</th>
            <td>{{ app.user.address }}</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>{{ app.user.gender }}</td>
        </tr>
        <tr>
            <th>Dob</th>
            <td>{{ app.user.dob ? app.user.dob|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Mobile</th>
            <td>{{ app.user.mobile }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ app.user.role }}</td>
        </tr>
        </tbody>
    </table>
<br>
    <a class="btn btn-primary" href="{{ path('user_edit', {'id': app.user.id}) }}">edit</a>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    </div>
{% endblock %}
